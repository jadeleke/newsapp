<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarSubtitle" parent="ToolbarSubtitle" tools:ignore="ResourceCycle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="ToolbarTitle" parent="ToolbarTitle" tools:ignore="ResourceCycle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
        <item name="collapseIcon">@drawable/ic_arrow_back_black_24dp</item>
        <item name="editTextColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryTextDark</item>
        <item name="hintTextColor">@color/colorSecondaryTextDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>
        <item name="searchIcon">@null</item>
        <item name="tint">@color/colorPrimaryText</item>
    </style>
</resources>
